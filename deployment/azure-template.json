{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "acrName": {
      "type": "string",
      "defaultValue": "nyctlcregistry",
      "metadata": {
        "description": "Name of the Azure Container Registry"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "nyc-tlc-app-plan",
      "metadata": {
        "description": "Name of the App Service Plan"
      }
    },
    "backendAppName": {
      "type": "string",
      "defaultValue": "nyc-tlc-backend-api",
      "metadata": {
        "description": "Name of the Backend Web App"
      }
    },
    "dbServer": {
      "type": "string",
      "metadata": {
        "description": "SQL Server name"
      }
    },
    "dbName": {
      "type": "string",
      "metadata": {
        "description": "SQL Database name"
      }
    },
    "dbUser": {
      "type": "string",
      "metadata": {
        "description": "SQL Database username"
      }
    },
    "dbPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Database password"
      }
    },
    "secretKey": {
      "type": "securestring",
      "metadata": {
        "description": "JWT Secret Key"
      }
    },
    "allowedOrigins": {
      "type": "string",
      "defaultValue": "*",
      "metadata": {
        "description": "Allowed CORS origins"
      }
    }
  },
  "variables": {
    "acrLoginServer": "[concat(parameters('acrName'), '.azurecr.io')]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-01-01-preview",
      "name": "[parameters('acrName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": true
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "size": "B1",
        "family": "B",
        "capacity": 1
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('backendAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
      ],
      "kind": "app,linux,container",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('DOCKER|', variables('acrLoginServer'), '/nyc-tlc-backend:latest')]",
          "appSettings": [
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "8000"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[concat('https://', variables('acrLoginServer'))]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').username]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').passwords[0].value]"
            },
            {
              "name": "DB_SERVER",
              "value": "[concat(parameters('dbServer'), '.database.windows.net')]"
            },
            {
              "name": "DB_NAME",
              "value": "[parameters('dbName')]"
            },
            {
              "name": "DB_USER",
              "value": "[parameters('dbUser')]"
            },
            {
              "name": "DB_PASSWORD",
              "value": "[parameters('dbPassword')]"
            },
            {
              "name": "DB_DRIVER",
              "value": "ODBC Driver 18 for SQL Server"
            },
            {
              "name": "SECRET_KEY",
              "value": "[parameters('secretKey')]"
            },
            {
              "name": "ALGORITHM",
              "value": "HS256"
            },
            {
              "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
              "value": "30"
            },
            {
              "name": "ALLOWED_ORIGINS",
              "value": "[parameters('allowedOrigins')]"
            }
          ],
          "alwaysOn": true,
          "healthCheckPath": "/health"
        },
        "httpsOnly": true
      }
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('backendAppName'))).defaultHostName)]"
    },
    "acrLoginServer": {
      "type": "string",
      "value": "[variables('acrLoginServer')]"
    }
  }
}
